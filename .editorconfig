root = true

[*]
charset = utf-8-bom
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{xml,config,conf,*proj,nuspec,props,resx,targets,yml,tasks,json,md,ts}]
indent_size = 2

[*.cs]
dotnet_sort_system_directives_first = true
indent_size = 4

[*.php]
indent_size = 4

[*.go]
indent_style = tab
indent_size = 4

[*.py]
indent_size = 4
